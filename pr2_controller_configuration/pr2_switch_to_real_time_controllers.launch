<launch>

  <rosparam command="load" file="$(find pr2_controller_configuration)/pr2_joint_velocity_controllers.yaml" />
  <rosparam command="load" file="$(find pr2_controller_configuration)/pr2_joint_group_velocity_controllers.yaml" />
  <rosparam command="load" file="$(find pr2_controller_configuration)/pr2_joint_position_controllers.yaml" />


  <node name="unspawn_arms"
        pkg="pr2_controller_manager" type="unspawner"
        args="l_arm_controller r_arm_controller torso_controller head_traj_controller" />

  <node name="spawn_vel_group_controllers"
        pkg="pr2_controller_manager" type="spawner"
        args="l_arm_joint_group_velocity_controller r_arm_joint_group_velocity_controller torso_lift_velocity_controller head_pan_position_controller head_tilt_position_controller" />

</launch>
